# Shared Git Configuration
# Device-specific settings (user, credentials) should be in ~/.gitconfig.local

[include]
    path = ~/.gitconfig.local

[core]
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
    # pager = delta
    editor = nvim

[pager]
	diff = riff
	show = riff
	log = riff

[push]
    default = current

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[pull]
    rebase = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection

[merge]
    conflictStyle = diff3

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L


[coderabbit]
	machineId = cli/5cedf2533d914bba86014b21ddae6f3b

[diff]
  tool = riff

[interactive]
	diffFilter = riff

[remote "origin"]
  prune = true
